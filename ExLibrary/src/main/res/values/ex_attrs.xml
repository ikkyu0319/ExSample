<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!--ExDecorView 自定义属性 -->
    <declare-styleable name="ExDecorView">
        <attr name="exBackground" format="reference|color"/>
        <attr name="exTitleNone" format="boolean"/>
        <attr name="exTitleFloat" format="boolean"/>
        <attr name="exTitleAndroidStyle" format="boolean"/>
        <attr name="exTitleFloatContentTopMargin" format="dimension"/>
        <attr name="exTitleHeight" format="dimension"/>
        <attr name="exTitleBackground" format="reference|color"/>
        <attr name="exTitleTextColor" format="reference|color"/>
        <!-- 文字颜色支持@color/xxx和#argb, 不支持@color/colorStateList，可通过代码来支持 -->
        <attr name="exTitleTextSize" format="dimension"/>
        <attr name="exTitleTextBold" format="boolean"/>
        <attr name="exTitleMainTextSize" format="dimension"/>
        <attr name="exTitleSubTextSize" format="dimension"/>
        <attr name="exTitleClickerBackground" format="reference|color"/>
        <attr name="exTitleClickerTextSize" format="dimension"/>
        <attr name="exTitleBackIcon" format="reference"/>
        <attr name="exTitleClickerHoriPadding" format="dimension"/>
    </declare-styleable>

    <!--LinearListView 自定义属性 -->
    <declare-styleable name="LinearListView">
        <attr name="dividerDimension" format="dimension"/>
        <attr name="dividerDrawable" format="reference"/>
    </declare-styleable>

    <!--RatingView 自定义属性 -->
    <declare-styleable name="RatingView">
        <attr name="rating" format="integer"/>
        <attr name="numStar" format="integer"/>
        <attr name="lightDrawable" format="reference"/>
        <attr name="halfDrawable" format="reference"/>
        <attr name="darkDrawable" format="reference"/>
        <attr name="spaceStar" format="dimension"/>
    </declare-styleable>
    <declare-styleable name="ProgressView">
        <attr name="progress_src" format="reference|color"/>
    </declare-styleable>


    <!--Switch 自定义属性 -->
    <declare-styleable name="Switch">
        <attr name="sw_trackSize" format="reference|dimension"/>
        <attr name="sw_trackColor" format="reference|color"/>
        <attr name="sw_trackCap" format="integer">
            <enum name="butt" value="0x00000000"/>
            <enum name="round" value="0x00000001"/>
            <enum name="square" value="0x00000002"/>
        </attr>
        <attr name="sw_thumbColor" format="reference|color"/>
        <attr name="sw_thumbRadius" format="reference|dimension"/>
        <attr name="sw_thumbElevation" format="reference|dimension"/>
        <attr name="sw_animDuration" format="reference|integer"/>
        <attr name="sw_interpolator" format="reference"/>
        <attr name="android:gravity"/>
        <attr name="android:checked"/>
    </declare-styleable>

    <!--Volley ImageView 自定义熟悉-->
    <attr name="default_image" format="reference" />
    <attr name="error_image" format="reference" />
    <attr name="animate_changes" format="boolean" />
    <attr name="in_animation" format="reference" />
    <attr name="out_animation" format="reference" />

    <declare-styleable name="NetworkImageView">
        <attr name="default_image" />
        <attr name="error_image" />
    </declare-styleable>
    <declare-styleable name="AnimateImageView">
        <attr name="animate_changes" />
        <attr name="in_animation" />
        <attr name="out_animation" />
    </declare-styleable>


</resources>